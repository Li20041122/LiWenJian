<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="D:\08课程文件\大三Web开发技术\实验四\mysql-connector-java-8.0.27\mysql-connector-java-8.0.27.jar"/>
    <!-- 配置数据库连接信息 -->
    <context id="mySQLTables" targetRuntime="MyBatis3Simple">
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- 配置数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/book?serverTimezone=UTC"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer -->
        <!-- true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 指定Java模型生成器 -->
        <javaModelGenerator targetPackage="edu.fosu.book.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 指定SQL映射文件生成位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 指定DAO接口生成位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="edu.fosu.book.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 指定要生成代码的表 -->
        <table tableName="book"  domainObjectName="Book"/>
        <table tableName="depart"  domainObjectName="Depart"/>
        <table tableName="tuser"  domainObjectName="User"/>
        <table tableName="borrow" domainObjectName="Borrow"/>
    </context>
</generatorConfiguration>
